---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { getImageUrl, processMarkdown } from "../../utils/payload";

const { slug } = Astro.params;
const API_URL = import.meta.env.PUBLIC_API_URL;

// Fetch Job Data
const getJob = async (slug: string) => {
  if (!API_URL) return null;
  try {
    const res = await fetch(
      `${API_URL}/api/jobs?where[slug][equals]=${slug}&depth=2`
    );
    if (!res.ok) return null;
    const data = await res.json();
    return data.docs?.[0];
  } catch (error) {
    console.error("Error fetching job:", error);
    return null;
  }
};

// Fetch Job Detail Page Global
const getJobDetailPage = async () => {
  if (!API_URL) return null;
  try {
    const res = await fetch(`${API_URL}/api/globals/job-detail-page?depth=2`);
    if (!res.ok) return null;
    return await res.json();
  } catch (error) {
    console.error("Error fetching job detail page:", error);
    return null;
  }
};

// Fetch Site Settings for logo
const getSiteSettings = async () => {
  if (!API_URL) return null;
  try {
    const res = await fetch(`${API_URL}/api/globals/site-settings?depth=2`);
    if (!res.ok) return null;
    return await res.json();
  } catch (error) {
    console.error("Error fetching site settings:", error);
    return null;
  }
};

const [job, pageData, siteSettings] = await Promise.all([
  getJob(slug!),
  getJobDetailPage(),
  getSiteSettings(),
]);

if (!job) {
  return Astro.redirect("/404");
}

// Formatters
const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  const now = new Date();
  const diffTime = Math.abs(now.getTime() - date.getTime());
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

  if (diffDays === 0) return "Today";
  if (diffDays === 1) return "1 day ago";
  if (diffDays < 7) return `${diffDays} days ago`;
  if (diffDays < 30) return `${Math.floor(diffDays / 7)} weeks ago`;
  return `${Math.floor(diffDays / 30)} months ago`;
};

const formatJobType = (type: string) => {
  return type
    .split("-")
    .map((word) => word.charAt(0).toUpperCase() + word.slice(1))
    .join(" ");
};

const formatSalary = (salary: number) => {
  return new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
    maximumFractionDigits: 0,
  }).format(salary);
};

// Get salary text
const salaryText = job.salary?.min && job.salary?.max 
  ? `${formatSalary(job.salary.min)}â€“${formatSalary(job.salary.max)} per ${job.salary.period || 'year'} | `
  : '';

// Fallback data
const whyWorkWithUs = pageData?.whyWorkWithUs || {
  enabled: true,
  heading: "Why Work With Us?",
  tagline: "Who knew you could actually enjoy going to work?",
  intro: "Our team members love working here because:",
  reasons: [
    { text: "You work alongside people who feel like friends" },
    { text: "Customers rely on you and respect your expertise" },
    { text: "You earn competitive pay with bonuses and incentives" },
    { text: "You have a clear, long-term career path" },
    { text: "You're part of a company that truly values work-life balance" },
  ],
  closingText: "From paid training to paid birthdays off, we do things differentlyâ€”and better.",
};

const jobIsForYouIf = pageData?.jobIsForYouIf || {
  enabled: true,
  heading: "This Job Is For You If",
  points: [
    { text: "You're stuck in a job you barely tolerate." },
    { text: "You feel underpaid or unappreciated." },
    { text: "You dread going to work the night before." },
    { text: "You want a career where you're excited to grow, learn, and earn more." },
  ],
  closingText: "If you're driven, motivated, and want to be the best HVAC technician you can be, we want to meet you.",
  highlightedText: "HVAC technician",
};

const whatMakesUsDifferent = pageData?.whatMakesUsDifferent || {
  enabled: true,
  heading: "What Makes Us Different?",
  badge: "Our Mission Is Simple",
  mission: "To become the best HVAC company to work for. Period.",
  cultureIntro: "We've built a culture where:",
  culturePoints: [
    { text: "Employees are never treated like numbers." },
    { text: "Hard work and results are recognized." },
    { text: "Growth and education are encouraged." },
    { text: "Family, hobbies, and personal time matter." },
  ],
  closingText: "We're expanding fast, and that means real opportunities for advancement.",
};

const coreValues = pageData?.coreValues || {
  enabled: true,
  heading: "Our Core Values",
  values: [
    { title: "Safety First", description: "Protecting our team and our customers." },
    { title: "WOW Service", description: "Exceeding expectations every time." },
    { title: "Great Place to Work", description: "Teamwork, respect, and support." },
    { title: "Integrity", description: "Doing the right thing, always." },
  ],
};

const equalOpportunity = pageData?.equalOpportunity || {
  enabled: true,
  heading: "Equal Opportunity Employer",
  text: "We are an equal opportunity employer and consider all qualified candidates without regard to race, color, religion, sex, national origin, disability, or veteran status.",
  veteransText: "Veterans are encouraged to apply.",
};

const cta = pageData?.cta || {
  heading: "Ready to Take the Next Step in Your HVAC Career?",
  subheading: "If you're looking for stability, growth, and a team that values your work, we'd love to hear from you.",
  buttonText: "Apply today and start building your future with us",
  emailLabel: "To apply for this job email your details to",
};

const defaults = pageData?.defaults || {
  benefitsTitle: "{jobTitle} Benefits & Compensation",
  qualificationsTitle: "{jobTitle} Job Qualifications",
  qualificationsIntro: "We're looking for professionals who have:",
  defaultBenefits: [
    { text: "Install residential heating, air conditioning, steam, and hydronic systems." },
    { text: "Inspect, diagnose, and repair HVAC equipment." },
    { text: "Perform routine preventive maintenance." },
    { text: "Respond to scheduled and emergency service calls." },
    { text: "Follow all company safety policies and procedures." },
  ],
  defaultQualifications: [
    { text: "Previous HVAC experience or related technical background." },
    { text: "Ability to read and understand wiring diagrams." },
    { text: "Strong troubleshooting and problem-solving skills." },
    { text: "Ability to manage physical job requirements." },
    { text: "Customer-focused mindset and strong communication skills." },
    { text: "Interest in ongoing learning and professional growth." },
  ],
};

// Use job-specific data or defaults
const benefits = job.benefits?.length > 0 ? job.benefits : defaults.defaultBenefits;
const qualifications = job.qualifications?.length > 0 ? job.qualifications : defaults.defaultQualifications;

// Application email
const applicationEmail = job.application?.email || "careers@evergreenplumbingri.com";

// Images from CMS or fallbacks
const whyWorkImage = whyWorkWithUs.image ? getImageUrl(whyWorkWithUs.image) : "/images/hand-wrench.png";
const jobForYouImage = jobIsForYouIf.image ? getImageUrl(jobIsForYouIf.image) : "/images/team-van.png";
const differentImage = whatMakesUsDifferent.image ? getImageUrl(whatMakesUsDifferent.image) : "/images/wrench.png";
const ctaImage = cta.image ? getImageUrl(cta.image) : "/images/red-wrench.png";
---

<Layout title={`${job.title} | Evergreen Services`} navbarBG={true}>
  <main class="bg-white">
    <!-- Header Section -->
    <section class="pt-28 lg:pt-32 pb-8 border-b border-neutral-200">
      <div class="max-w-6xl mx-auto px-6">
        <!-- Breadcrumbs - Centered -->
        <div class="flex items-center justify-center gap-2 text-sm text-neutral-500 mb-8">
          <a href="/" class="hover:text-evergreen-primary transition-colors">Home</a>
          <span>â€º</span>
          <a href="/contact" class="hover:text-evergreen-primary transition-colors">Contact</a>
          <span>â€º</span>
          <a href="/careers" class="hover:text-evergreen-primary transition-colors">Jobs/Careers</a>
          <span>â€º</span>
          <span class="text-neutral-900">Job Vacant</span>
        </div>

        <!-- Job Title with Logo -->
        <div class="flex items-start justify-between gap-8">
          <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-neutral-900 mb-1">
              {job.title}
            </h1>
            <p class="text-evergreen-primary font-medium mb-3">Evergreen Service</p>

            <!-- Job Meta - inline with icons -->
            <div class="flex flex-wrap items-center gap-4 text-sm text-neutral-600">
              <div class="flex items-center gap-1.5">
                <Icon name="suitcase" class="w-4 h-4" />
                <span>{formatJobType(job.type)}</span>
              </div>
              <div class="flex items-center gap-1.5">
                <Icon name="map-marker" class="w-4 h-4" />
                <span>{job.location}</span>
              </div>
              <div class="flex items-center gap-1.5">
                <Icon name="clock" class="w-4 h-4" />
                <span>{formatDate(job.createdAt)}</span>
              </div>
            </div>
          </div>

          <!-- Logo -->
          <div class="hidden lg:block flex-shrink-0">
            <img
              src={getImageUrl(siteSettings?.company.logoAlt)}
              alt="Evergreen Services"
              class="h-16 w-auto"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Job Description -->
    <section class="py-10 lg:py-14 border-b border-neutral-200">
      <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-xl lg:text-2xl font-bold text-neutral-900 mb-2">
          {job.title} Jobs & Details Near Warwick, RI
        </h2>

        <p class="text-neutral-600 mb-6">
          {formatJobType(job.type)} | {salaryText}24/7 Service Company
        </p>

        <h3 class="text-lg lg:text-xl font-bold text-neutral-900 mb-6">
          Join a Top-Rated HVAC Company Where You Can Grow, Be Recognized, and Earn What You Deserve
        </h3>

        {job.description ? (
          <div class="text-neutral-600 prose prose-neutral max-w-none" set:html={processMarkdown(job.description)} />
        ) : (
          <div class="text-neutral-600 space-y-4">
            <p>
              Are you an experienced <span class="text-evergreen-primary font-semibold">HVAC Service Technician</span> or Heating and Air Conditioning Expert looking for more than just a job?
            </p>
            <p>
              We're building the best place to work for HVAC professionalsâ€”a company where your skills are valued, your growth is supported, and your hard work is rewarded.
            </p>
            <p>
              This isn't a short-term gig.<br />
              <span class="font-bold text-neutral-900">This is a life-long HVAC career.</span>
            </p>
          </div>
        )}
      </div>
    </section>

    <!-- Why Work With Us -->
    {whyWorkWithUs.enabled !== false && (
      <section class="bg-evergreen-primary py-12 lg:py-16 overflow-hidden">
        <div class="max-w-6xl mx-auto px-6">
          <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
            <!-- Content -->
            <div class="flex-1 text-white">
              <h2 class="text-2xl lg:text-3xl font-bold mb-4 italic">
                {whyWorkWithUs.heading}
              </h2>
              {whyWorkWithUs.tagline && (
                <p class="border border-white/40 rounded-full px-4 py-1.5 inline-block mb-6 text-sm">
                  {whyWorkWithUs.tagline}
                </p>
              )}
              <p class="mb-5">{whyWorkWithUs.intro}</p>
              <ul class="space-y-2 mb-6 ml-4">
                {whyWorkWithUs.reasons?.map((reason: { text: string }) => (
                  <li class="flex items-start gap-2">
                    <span class="mt-1.5">â€¢</span>
                    <span>{reason.text}</span>
                  </li>
                ))}
              </ul>
              <p class="font-bold" set:html={whyWorkWithUs.closingText?.replace(/\n/g, '<br />')} />
            </div>

            <!-- Image -->
            <div class="flex-1 w-full max-w-xs lg:max-w-sm">
              <img
                src={whyWorkImage}
                alt="Hand holding wrench"
                class="w-full h-auto object-contain"
              />
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- This Job Is For You If -->
    {jobIsForYouIf.enabled !== false && (
      <section class="bg-neutral-900 py-12 lg:py-16 overflow-hidden">
        <div class="max-w-6xl mx-auto px-6">
          <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
            <!-- Content -->
            <div class="flex-1 text-white">
              <h2 class="text-2xl lg:text-3xl font-bold mb-6 italic">
                {jobIsForYouIf.heading}
              </h2>
              <ul class="space-y-2 mb-6 ml-4">
                {jobIsForYouIf.points?.map((point: { text: string }) => (
                  <li class="flex items-start gap-2 text-neutral-300">
                    <span class="mt-1.5">â€¢</span>
                    <span>{point.text}</span>
                  </li>
                ))}
              </ul>
              <p class="text-neutral-300">
                {jobIsForYouIf.closingText?.split(jobIsForYouIf.highlightedText || '')[0]}
                <span class="text-white font-bold">{jobIsForYouIf.highlightedText}</span>
                {jobIsForYouIf.closingText?.split(jobIsForYouIf.highlightedText || '')[1]}
              </p>
            </div>

            <!-- Image -->
            <div class="flex-1 w-full">
              <img
                src={jobForYouImage}
                alt="Evergreen Team and Van"
                class="w-full h-auto object-cover rounded-lg"
              />
            </div>
          </div>
        </div>
      </section>
    )}

    <!-- What Makes Us Different + Benefits + Qualifications + Core Values -->
    <section class="bg-black py-12 lg:py-16 text-white overflow-hidden">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex flex-col lg:flex-row gap-12 lg:gap-16">
          <!-- Left Column - Content -->
          <div class="flex-1 space-y-12">
            <!-- What Makes Us Different -->
            {whatMakesUsDifferent.enabled !== false && (
              <div>
                <h2 class="text-2xl lg:text-3xl font-bold text-evergreen-primary mb-2 italic">
                  {whatMakesUsDifferent.heading}
                </h2>
                {whatMakesUsDifferent.badge && (
                  <p class="border border-evergreen-primary/50 text-evergreen-primary text-xs font-semibold px-3 py-1 rounded inline-block mb-4 uppercase tracking-wider">
                    {whatMakesUsDifferent.badge}
                  </p>
                )}
                <p class="text-neutral-300 mb-4">{whatMakesUsDifferent.mission}</p>
                <p class="text-white font-semibold mb-4">{whatMakesUsDifferent.cultureIntro}</p>
                <ul class="space-y-2 mb-6">
                  {whatMakesUsDifferent.culturePoints?.map((point: { text: string }) => (
                    <li class="flex items-center gap-3">
                      <Icon name="check-circle" class="w-5 h-5 text-evergreen-primary shrink-0" />
                      <span class="text-neutral-300">{point.text}</span>
                    </li>
                  ))}
                </ul>
                <p class="text-white font-semibold" set:html={whatMakesUsDifferent.closingText?.replace(/\n/g, '<br />')} />
              </div>
            )}

            <!-- Benefits & Compensation -->
            <div>
              <h2 class="text-xl lg:text-2xl font-bold text-evergreen-primary mb-1">
                {job.title}
              </h2>
              <h3 class="text-xl lg:text-2xl font-bold text-evergreen-primary mb-4">
                Benefits & Compensation
              </h3>
              <ul class="space-y-2">
                {benefits?.map((benefit: { text: string }) => (
                  <li class="flex items-start gap-3">
                    <Icon name="check-circle" class="w-5 h-5 text-evergreen-primary shrink-0 mt-0.5" />
                    <span class="text-neutral-300">{benefit.text}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Qualifications -->
            <div>
              <h2 class="text-xl lg:text-2xl font-bold text-evergreen-primary mb-2">
                {job.title} Qualifications
              </h2>
              <p class="text-neutral-400 mb-4">{defaults.qualificationsIntro}</p>
              <ul class="space-y-2">
                {qualifications?.map((qual: { text: string }) => (
                  <li class="flex items-start gap-3">
                    <Icon name="check-circle" class="w-5 h-5 text-evergreen-primary shrink-0 mt-0.5" />
                    <span class="text-neutral-300">{qual.text}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Core Values -->
            {coreValues.enabled !== false && (
              <div>
                <h2 class="text-xl lg:text-2xl font-bold text-evergreen-primary mb-6">
                  {coreValues.heading}
                </h2>
                <div class="space-y-4">
                  {coreValues.values?.map((value: { title: string; description: string }) => (
                    <p>
                      <span class="font-bold text-white">{value.title}</span>
                      <span class="text-neutral-400"> â€“ {value.description}</span>
                    </p>
                  ))}
                </div>
              </div>
            )}
          </div>

          <!-- Right Column - Image -->
          <div class="flex-1 hidden lg:flex items-start justify-center sticky top-32">
            <img
              src={differentImage}
              alt="Professional Wrench"
              class="w-full max-w-lg h-auto object-contain"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Equal Opportunity + CTA -->
    <section class="bg-[#085E14] py-12 lg:py-16 text-white overflow-hidden">
      <div class="max-w-6xl mx-auto px-6">
        <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
          <!-- Content -->
          <div class="flex-1 max-w-lg">
            <!-- Equal Opportunity -->
            {equalOpportunity.enabled !== false && (
              <>
                <h2 class="text-2xl lg:text-3xl font-bold mb-4">
                  {equalOpportunity.heading}
                </h2>
                <p class="text-white/90 mb-4 max-w-xl">
                  {equalOpportunity.text}
                </p>
                <p class="flex items-center gap-2 font-semibold mb-10">
                  <span>ðŸ‡ºðŸ‡¸</span>
                  <span>{equalOpportunity.veteransText}</span>
                </p>
              </>
            )}

            <!-- CTA -->
            <h3 class="text-2xl lg:text-3xl font-bold mb-4" set:html={cta.heading?.replace(/\n/g, '<br />')} />
            <p class="text-white/90 mb-6 max-w-xl">
              {cta.subheading}
            </p>

            <a
              href={job.application?.externalUrl || `mailto:${applicationEmail}?subject=Application for ${job.title}`}
              class="inline-block bg-transparent border-2 border-white text-white hover:bg-white hover:text-evergreen-primary transition-colors px-6 py-3 rounded-lg font-semibold text-sm mb-6"
            >
              {cta.buttonText}
            </a>

            <p class="text-sm text-white/80">
              {cta.emailLabel}<br />
              <a href={`mailto:${applicationEmail}`} class="font-bold text-white">
                {applicationEmail}
              </a>
            </p>
          </div>

          <!-- Image -->
          <div class="flex-1 w-full max-w-xs lg:max-w-sm">
            <img
              src={ctaImage}
              alt="Red Wrench"
              class="w-full h-auto object-contain"
            />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>